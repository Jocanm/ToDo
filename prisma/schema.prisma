generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String?
  done        Boolean @default(false)
  user        User?   @relation(fields: [userId], references: [id])
  userId      String? @db.ObjectId
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  name     String
  password String
  todos    Todo[]
}

